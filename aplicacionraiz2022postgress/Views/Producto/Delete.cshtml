@using System.Data
@model DataTable

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>Esta seguro que quiere borrarlo?</h3>
@foreach (DataRow row in Model.Rows) {
<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            NOMBRE
        </dt>
        <dd class = "col-sm-10">
            @row["Name"]
        </dd>
        <dt class = "col-sm-2">
            CLASE
        </dt>
        <dd class = "col-sm-10">
            @row["Clase"]
        </dd>
        <dt class = "col-sm-2">
            SUBCLASE
        </dt>
        <dd class = "col-sm-10">
            @row["Subclase"]
        </dd>
        <dt class = "col-sm-2">
            KEYWORDS
        </dt>
        <dd class = "col-sm-10">
            @row["Keywords"]
        </dd>
        <dt class = "col-sm-2">
            ESTADO
        </dt>
        <dd class = "col-sm-10">
            @row["Estado"]
        </dd>
        <dt class = "col-sm-2">
            DESCRIPCION
        </dt>
        <dd class = "col-sm-10">
            @row["Descripcion"]
        </dd>
        <dt class = "col-sm-2">
            PRECIO
        </dt>
        <dd class = "col-sm-10">
            @row["Precio"]
        </dd>
        <dt class = "col-sm-2">
            PRECIO REFERENCIAL
        </dt>
        <dd class = "col-sm-10">
            @row["PorcentajeDescuento"]
        </dd>
        <dt class = "col-sm-2">
            NOMBRE DE IMAGEN
        </dt>
        <dd class = "col-sm-10">
            @row["ImageName"]
        </dd>
        <dt class = "col-sm-2">
            IMAGEN 3D
        </dt>
        <dd class = "col-sm-10">
            @row["Image3D"]
        </dd>
        <dt class = "col-sm-2">
            STATUS
        </dt>
        <dd class = "col-sm-10">
            @row["Status"]
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="@row["id"]" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
}